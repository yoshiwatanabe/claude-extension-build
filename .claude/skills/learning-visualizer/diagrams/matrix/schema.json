{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Matrix Schema",
    "type": "object",
    "required": [
        "type",
        "rows",
        "columns",
        "cells"
    ],
    "properties": {
        "type": {
            "type": "string",
            "const": "matrix"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "rows": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "label"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "columns": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "label"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "weight": {
                        "type": "number"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "cells": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "row",
                    "col"
                ],
                "properties": {
                    "row": {
                        "type": "string"
                    },
                    "col": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "score": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 5
                    },
                    "description": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object"
                    }
                }
            }
        }
    }
}