{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Network Diagram Schema",
    "type": "object",
    "required": [
        "type",
        "nodes",
        "links"
    ],
    "properties": {
        "type": {
            "type": "string",
            "const": "network"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "nodes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "label"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "group": {
                        "type": "string"
                    },
                    "size": {
                        "type": "number"
                    },
                    "description": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object"
                    }
                }
            }
        },
        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "source",
                    "target"
                ],
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "strength": {
                        "type": "number"
                    },
                    "bidirectional": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    }
}