{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Flow Diagram Schema",
    "type": "object",
    "required": [
        "type",
        "nodes",
        "edges"
    ],
    "properties": {
        "type": {
            "type": "string",
            "const": "flow"
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "nodes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "label",
                    "nodeType"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "nodeType": {
                        "enum": [
                            "start",
                            "process",
                            "decision",
                            "end"
                        ]
                    },
                    "description": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object"
                    }
                }
            }
        },
        "edges": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "from",
                    "to"
                ],
                "properties": {
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "weight": {
                        "type": "number"
                    },
                    "edgeType": {
                        "enum": [
                            "normal",
                            "conditional",
                            "error"
                        ]
                    }
                }
            }
        }
    }
}